@page
@model AiLanguageApp.Pages.GeneratorModel
@{
    ViewData["Title"] = "AI Language Generator";
}

<h2>AI Language Generator</h2>
<form method="post">
    <div>
        <label for="generatorInputText">Enter text to generate sound:</label><br />
        <textarea id="generatorInputText" name="GeneratorInputText" rows="4" cols="50"></textarea>
    </div>
    <div>
        <button type="submit">Generate & Play Sound</button>
    </div>
    <div style="margin-top: 10px;">
        <label>Generated Sound Code (Optional):</label><br />
        <pre id="soundCodeDisplay"></pre>
    </div>
</form>
