@page
@model AiLanguageApp.Pages.DeciphererModel
@{
    ViewData["Title"] = "AI Language Decipherer";
}

<h2>AI Language Decipherer</h2>

<p>@Model.Message</p>

<form method="post">
    <div>
        <label for="deciphererInputSoundCode">Enter sound code to decipher:</label><br />
        <textarea id="deciphererInputSoundCode" name="DeciphererInputSoundCode" asp-for="DeciphererInputSoundCode" rows="4" cols="50">@Model.DeciphererInputSoundCode</textarea><br />
        <span asp-validation-for="DeciphererInputSoundCode" class="text-danger"></span> <!-- ADD THIS LINE -->
    </div>
    <div>
        <button type="submit">Decipher Sound Code</button>
    </div>
    <div style="margin-top: 10px;">
        <label>Deciphered Text:</label><br />
        <pre id="decipheredTextDisplay">@Model.DecipheredTextDisplay</pre>
    </div>
</form>
